{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}
{% block title %}index Livre{% endblock %}

{% block body %}

    <div>
        <a href="{{ path('livre_new') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span> </a>
    </div>
    <br>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Nombre de pages</th>
                <th>Date edition</th>
                <th>Nombre exemplaires</th>
                <th>Prix</th>
                <th>ISBN</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>

                <td><img src="../../assets/img/{{ livre.image }}" alt="" width="50px" height="70px"/></td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.nbpages }}</td>
                <td>{{ livre.dateedition ? livre.dateedition|date('Y-m-d'): '' }}</td>
                <td>{{ livre.nbexemplaires }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.isbn }}</td>
                <td>

                    <a href="{{ path('livre_show', {'id': livre.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a>
                    <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a>
                    <a href="{{ path('livre_delete_2', {'id': livre.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas d'enregistement touv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
    <!-- DATA TABLE SCRIPTS -->
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- Custom Js -->
    <script src="{{ asset('js/custom-scripts.js') }}"></script>


{% endblock %}
