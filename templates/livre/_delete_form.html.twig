<form method="post" action="{{ path('livre_delete', {'id': livre.id}) }}" onsubmit="return confirm('Est ce que vous etes sur de supprimer cet livre?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp; Supprimer</button>
</form>
