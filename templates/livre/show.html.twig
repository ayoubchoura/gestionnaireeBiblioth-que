{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}

    <table class="table table-striped">
        <tbody>

            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpages }}</td>
            </tr>
            <tr>
                <th>Date d'édition</th>
                <td>{{ livre.dateedition? livre.dateedition|date('Y-m-d'): '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'exemplaires</th>
                <td>{{ livre.nbexemplaires }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nomediteur }}</td>
            </tr>
            {% if livre.categorie != null %}

            <tr>
                <th>Catégorie</th>
                <td>{{ livre.categorie.designation }}</td>
            </tr>
            {% else %}
               <tr>
                <th>Catégorie</th>
                <td>Rien</td>
            </tr>
            {% endif %}
            <tr>
                <th>Auteurs</th>
                 <td>
                         {% for auteur in livre.auteurs %}
                             <span class="badge badge-primary">  {{ auteur.prenom }} {{ auteur.nom }} </span>
                         {% endfor %}
                     </td>
            </tr>


        </tbody>
    </table>


    <div class="container">
        <div class="row">
            <div class="col col-lg-6">
                <a href="{{ path('livre_index') }}"><span class="btn btn-primary"><i class="fa fa-backward"></i>&nbsp; Retour</span></a>
                &nbsp;
                <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i>&nbsp; Editer</span></a>
            </div>
            {{ include('livre/_delete_form.html.twig') }}

        </div>
    </div>
{% endblock %}
