<form method="post" action="{{ path('categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Est ce que vous etes sur de supprimer cette categorie?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp; Supprimer</button>
</form>
