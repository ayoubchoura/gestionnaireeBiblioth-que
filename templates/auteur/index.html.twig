{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
{% endblock %}
{% block title %}Index Auteur{% endblock %}

{% block body %}

    <div>
        <a href="{{ path('nouvel_auteur') }}"><span class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Nouveau</span> </a>
    </div>
    <br>
<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
    <tr>
        <th>#</th>
        <th>Prenom</th>
        <th>Nom</th>
        <th>Biographie</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
        {% for c,a in listeAuteurs %}
            <tr>
            <td>{{ c + 1 }}</td>
            <td>{{ a.prenom }}</td>
            <td>{{ a.nom }}</td>
            <td>{{ a.bigraphie }}</td>
            <td>
                <a href="{{ path('afficher_auteur',{'id':a.id}) }}"><span class="btn btn-default"><i class="fa fa-eye"></i></span></a> &nbsp;
                <a href="{{ path('edit_auteur',{'id':a.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i></span></a> &nbsp;
                <a href="{{ path('delete_auteur',{'id':a.id}) }}"><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span></a>

            </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
{% block javascripts %}
    <!-- DATA TABLE SCRIPTS -->
    <script src="{{ asset('js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- Custom Js -->
    <script src="{{ asset('js/custom-scripts.js') }}"></script>


{% endblock %}